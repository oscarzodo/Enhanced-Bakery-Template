         var user= WebSecurity.CurrentUserId;
         var db = Database.Open("ShopCU");
         ////////////Get cartid/////////////////////////
         var cmd1="select CartId from Cart where UserId=@0";
         var cartid = db.QueryValue(cmd1, user);
